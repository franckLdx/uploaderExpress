{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "node": true,
    "mocha": true
  },
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "no-bitwise": [
      "error",
      {
        "allow": [
          "|"
        ]
      }
    ],
    "no-underscore-dangle": "off",
    "strict": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": [
      "warn",
      {
        "additionalHooks": "useRecoilCallback"
      }
    ]
  }
}